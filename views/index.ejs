<script type="text/ng-template" id="/posts.html">
    <div class="page-header">
        <h3>
            <a ng-show="post.link" href="#/posts/{{post._id}}">
                {{post.title}}
            </a>
			<span ng-hide="post.link">
			  {{post.title}}
			</span>
			<span>
				{{post.link}}
			</span>
        </h3>
    </div>

    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
    		<span style="font-size:20px; margin-left:10px;">
      			{{comment.body}}
    		</span>
    </div>

    <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
    </div>

    <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
        <h3>Add a new answer</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Answer" ng-model="body">
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</script>

<script type="text/ng-template" id="/register.html">

    <link rel="stylesheet" href="/stylesheets/register/style.css">

    <div class="container">
        <section class="register">
            <h1>عضویت در QuizUp</h1>

            <div ng-show="error.message" class="alert alert-danger row">
                <span>{{ error.message }}</span>
            </div>
            <form method="post" ng-submit="register()">
                <div class="reg_section personal_info">
                    <h3>اطلاعات فردی</h3>
                    <input type="text" name="username" value="" placeholder="نام کاربری" ng-model="user.username">
                    <input type="email" name='email' value="" validate-email id='email' ng-model='user.email' required
                           placeholder="آدرس ایمیل">
                </div>
                <div class="reg_section password">
                    <h3>رمز</h3>
                    <input type="password" name="password" value="" placeholder="رمز" ng-model="user.password">
                    <input type="password" name="confirm" value="" placeholder="تکرار رمز" ng-model="passwordRepeat">
                </div>
                <div class="reg_section password">
                    <h3>کشور</h3>
                    <select>
                        <option value="">ایران</option>
                        <option value="">مصر</option>
                        <option value="">فلسطین</option>
                        <option value="">سوریه</option>
                        <option value="">ایتالیا</option>
                    </select>
                    <textarea name="textarea" id="">آدرس کامل</textarea>
                </div>
                <p class="terms">
                    <label>
                        <input type="checkbox" name="remember_me" id="remember_me" ng-model="user.agreement"> با تمام
                        شرایط سایت Quiz Up موافقم
                    </label>
                </p>

                <p class="submit"><input type="submit" name="commit" value="عضویت"></p>
            </form>

        </section>

    </div>

</script>

